pipeline {
    agent any

    tools {
        maven 'Maven-3.9.11'        // Configure this name in Jenkins â†’ Global Tool Configuration
        jdk 'jdk17'              // Configure JDK name in Jenkins
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'Fetching code from GitHub...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building Maven project.....'
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('TestNG Tests') {
            steps {
                echo 'Running TestNG tests...'
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Add your deploy commands here
                // Example:
                // sh 'scp target/myapp.jar user@server:/opt/app/'
                // sh 'ssh user@server "systemctl restart myapp"'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
